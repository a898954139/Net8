@model List<Category>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary-emphasis">
                Category List
            </h2>
        </div>
        <div class="col-4 text-end">
            <a class="btn btn-primary" asp-controller="Category" asp-action="Create">
                <i class="bi bi-plus-circle-fill"></i> Add New Category
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Name
            </th>
            <th>
                Edit Detail
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var category in Model.OrderBy(o => o.DisplayOrder))
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.DisplayOrder</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-Id="@category.Id" class="btn btn-primary me-2">
                            <i class="bi bi-pen-fill"></i> Edit
                        </a>
                        <a asp-controller="Category" asp-action="Delete" class="btn btn-danger me-2">
                            <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>