@model List<Category>
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Category List</h2>
<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
            Category Name
        </th>
        <th>
            Display Name
        </th>
    </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.OrderBy(o => o.DisplayOrder))
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.DisplayOrder</td>
            </tr>
        }
    </tbody>
</table>
