@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-3">
            <h2>Create Category</h2>
            <hr/>
        </div>
        <div asp-validation-summary="All"></div>
        <div class="row mb-3 p-1">
            <label asp-for="Name" class="pb-2"></label>
            <input asp-for="Name" type="text" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="row pb-2 p-1">
            <label asp-for="DisplayOrder" class="pb-2"></label>
            <input asp-for="DisplayOrder" type="text" class="form-control"/>
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        
        <div class="row pt-3">
            <div class="col-6">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6">
                <a class="btn btn-secondary border form-control" asp-controller="Category" asp-action="Index">Back To List</a>
            </div>
        </div>
    </div>
</form>
